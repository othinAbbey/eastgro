datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") 
}

generator client {
  provider = "prisma-client-js"
}

model Farmer {
  id            Int      @id @default(autoincrement())
  name          String
  email         String   @unique
  phone         String
  farm_location String
  farm_type     String
  reports       Report[] // ðŸ‘ˆ Add this back-relation field
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Float
  category    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Report {
  id           Int      @id @default(autoincrement())
  problem_type String
  description  String
  urgency      String
  farmerId     Int?
  farmer       Farmer?  @relation(fields: [farmerId], references: [id])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
